<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Switch
        android:id="@+id/switch_jarvis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="13dp"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:text="Enable Jarvis"
        android:textOff="No"
        android:textOn="Yes"
        android:onClick="onClick"/>

    <TextView
        android:id="@+id/tv_jarvis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Jarvis Disabled"
        android:textSize="18sp"
        android:textStyle="italic" />

    <!--<android.support.design.widget.FloatingActionButton-->
        <!--android:id="@+id/fab_mic"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_margin="8dp"-->
        <!--android:src="@drawable/microphone"-->
        <!--android:onClick="onClickMic"/>-->

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/switch_jarvis"
        android:layout_margin="8dp">
    </Spinner>

    <Spinner
        android:id="@+id/voice_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinner"
        android:layout_margin="8dp">
    </Spinner>

</RelativeLayout>